<h1>New Article</h1>

<%= form_with(model: @article, local: true) do |form| %>

  <div class="field">
    <%= form.label :Title %>
    <%= form.text_field :title, required: true %>
  </div>

  <div class="field">
    <%= form.label :Description %>
    <%= form.text_area :desc, required: true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', articles_path %>
